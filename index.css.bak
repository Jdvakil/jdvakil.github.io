    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 14px;
    padding: 16px;
  }

  .affil-tile {
    min-height: 74px;
  }
}

/* ============================================================
   NAVBAR — TRUE APPLE DNA
   Proportions: apple.com style — 44px tall pill floating at top
   Font: SF Pro proxy (Inter -0.02em) @ 13px / weight 400
   ============================================================ */
.apple-nav {
  position: fixed;
  top: 16px;
  left: 50%;
  transform: translateX(-50%);
  z-index: 1100;
  width: fit-content;
  max-width: calc(100vw - 32px);
  height: 44px;
  border-radius: 980px;
  background: rgba(28, 28, 30, 0.72);
  backdrop-filter: saturate(180%) blur(20px);
  -webkit-backdrop-filter: saturate(180%) blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.10);
  box-shadow:
    inset 0 0 0 0.5px rgba(255, 255, 255, 0.14),
    0 4px 24px rgba(0, 0, 0, 0.5);
  transition: background 0.3s ease, box-shadow 0.3s ease;
}

.apple-nav.scrolled {
  background: rgba(22, 22, 24, 0.88);
  box-shadow:
    inset 0 0 0 0.5px rgba(255, 255, 255, 0.18),
    0 8px 28px rgba(0, 0, 0, 0.65);
}

.nav-inner {
  display: flex;
  align-items: center;
  height: 100%;
  padding: 0 8px;
  gap: 0;
}

/* JV brand — plain text link, same weight as nav items */
.nav-brand {
  font-size: 0.8125rem;      /* 13px */
  font-weight: 600;
  letter-spacing: 0.01em;
  color: rgba(255, 255, 255, 0.86);
  padding: 0 14px;
  height: 100%;
  display: inline-flex;
  align-items: center;
  text-decoration: none;
  border-right: 0.5px solid rgba(255, 255, 255, 0.10);
  margin-right: 4px;
  flex-shrink: 0;
  transition: color 0.15s;
}

.nav-brand:hover {
  color: #fff;
}

.nav-links {
  display: flex;
  align-items: center;
  height: 100%;
  gap: 0;
}

/* Core link — mirrors apple.com nav text exactly */
.nav-link {
  font-size: 0.8125rem;      /* 13px */
  font-weight: 400;
  line-height: 1;
  letter-spacing: -0.015em;
  color: rgba(245, 245, 247, 0.68);
  padding: 0 12px;
  height: 100%;
  display: inline-flex;
  align-items: center;
  text-decoration: none;
  white-space: nowrap;
  position: relative;
  transition: color 0.15s ease;
}

.nav-link:hover {
  color: rgba(245, 245, 247, 0.94);
}

/* Active: white text + minimal underline dot */
.nav-link.active {
  color: rgba(255, 255, 255, 0.96);
}

.nav-link.active::after {
  content: '';
  position: absolute;
  bottom: 7px;
  left: 50%;
  transform: translateX(-50%);
  width: 3px;
  height: 3px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.6);
}

/* CV button — subtle outlined pill inside the bar */
.nav-link-cv {
  margin-left: 8px;
  margin-right: 4px;
  height: 28px;
  padding: 0 13px;
  border-radius: 980px;
  font-size: 0.8125rem;
  font-weight: 400;
  letter-spacing: -0.015em;
  color: rgba(245, 245, 247, 0.86);
  background: rgba(255, 255, 255, 0.07);
  border: 0.5px solid rgba(255, 255, 255, 0.18);
  display: inline-flex;
  align-items: center;
  gap: 5px;
  align-self: center;
  transition: background 0.15s, color 0.15s;
}

.nav-link-cv:hover {
  background: rgba(255, 255, 255, 0.12);
  color: #fff;
}

.nav-link-cv i {
  font-size: 0.65em;
  opacity: 0.75;
}

@media (max-width: 900px) {
  .apple-nav {
    top: 10px;
  }

  .nav-link, .nav-brand {
    padding: 0 10px;
  }

  body {
    padding-top: 76px;
  }
}

@media (max-width: 640px) {
  .apple-nav {
    left: 8px;
    right: 8px;
    transform: none;
    max-width: none;
    width: auto;
    height: 40px;
  }

  .nav-inner {
    padding: 0 4px;
  }

  .nav-link, .nav-brand {
    padding: 0 8px;
    font-size: 0.75rem;
  }

  .nav-links {
    overflow-x: auto;
    scrollbar-width: none;
  }

  .nav-links::-webkit-scrollbar { display: none; }

  .nav-link-cv {
    margin-left: 4px;
    padding: 0 10px;
    font-size: 0.75rem;
  }
}

/* ============================================================
   SCROLL PROGRESS BAR
   ============================================================ */
#scroll-progress {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 3px;
  z-index: 9999;
  background: rgba(255, 255, 255, 0.03);
}

#scroll-progress-fill {
  height: 100%;
  width: 0%;
  background: linear-gradient(
    90deg,
    #1a5fa8 0%,
    #2997ff 40%,
    #78c8ff 72%,
    #c4e8ff 100%
  );
  box-shadow:
    0 0 8px rgba(41, 151, 255, 0.9),
    0 0 22px rgba(41, 151, 255, 0.5),
    0 0 50px rgba(41, 151, 255, 0.22);
  border-radius: 0 2px 2px 0;
  position: relative;
  will-change: width;
}

/* Glowing dot at the progress tip */
#scroll-progress-fill::after {
  content: '';
  position: absolute;
  right: -4px;
  top: 50%;
  transform: translateY(-50%);
  width: 9px;
  height: 9px;
  border-radius: 50%;
  background: radial-gradient(circle at 35% 30%, #fff, #78c8ff);
  box-shadow:
    0 0 6px rgba(41, 151, 255, 1),
    0 0 18px rgba(41, 151, 255, 0.85),
    0 0 36px rgba(41, 151, 255, 0.5);
}

/* ============================================================
   H2 HEADING — GLASS SHIMMER ON SCROLL ENTRY
   ============================================================ */
h2 {
  overflow: hidden; /* clip the shimmer sweep */
}

h2 > .h2-shimmer {
  position: absolute;
  inset: -2px -6px;
  background: linear-gradient(
    108deg,
    transparent 28%,
    rgba(255, 255, 255, 0.22) 46%,
    rgba(160, 220, 255, 0.16) 54%,
    transparent 72%
  );
  transform: translateX(-140%);
  pointer-events: none;
  z-index: 2;
  border-radius: 4px;
}

h2.shimmer-animate > .h2-shimmer {
  animation: h2ShimmerSweep 0.9s cubic-bezier(0.4, 0.8, 0.3, 1) forwards;
}

@keyframes h2ShimmerSweep {
  0%   { transform: translateX(-140%); }
  100% { transform: translateX(140%); }
}

/* ============================================================
   GLASS ORBS — HERO DECORATION
   ============================================================ */
.hero-block {
  position: relative;
}

.glass-orb {
  position: absolute;
  border-radius: 50%;
  pointer-events: none;
  will-change: transform;
  z-index: 0;
}

/* ============================================================
   REVEAL SECTIONS — GLASS ENTRY LINE
   ============================================================ */
.reveal {
  position: relative;
}

.reveal::after {
  content: '';
  position: absolute;
  top: 0;
  left: 5%;
  right: 5%;
  height: 1px;
  background: transparent;
  pointer-events: none;
  opacity: 0;
  transition: none;
}

.reveal.active::after {
  animation: revealGlassLine 1.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

@keyframes revealGlassLine {
  0% {
    opacity: 0;
    background: linear-gradient(90deg,
      transparent,
      rgba(41, 151, 255, 0.9) 30%, rgba(120, 200, 255, 0.9) 50%, rgba(41, 151, 255, 0.9) 70%,
      transparent
    );
  }
  25% {
    opacity: 1;
  }
  100% {
    opacity: 0;
    background: linear-gradient(90deg,
      transparent,
      rgba(41, 151, 255, 0.15) 30%, rgba(120, 200, 255, 0.15) 50%, rgba(41, 151, 255, 0.15) 70%,
      transparent
    );
  }
}

/* ============================================================
   3D GLASS CARD — ENHANCED REVEAL SHIMMER FLASH
   ============================================================ */
@keyframes glassRevealFlash {
  0%   { opacity: 0; transform: translateX(-110%); }
  40%  { opacity: 1; }
  100% { opacity: 0; transform: translateX(110%); }
}

.bento-card.glass-flash::before,
.exp-card.glass-flash::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(
    105deg,
    transparent 30%,
    rgba(255, 255, 255, 0.12) 47%,
    rgba(160, 220, 255, 0.09) 53%,
    transparent 70%
  );
  pointer-events: none;
  z-index: 5;
  border-radius: inherit;
  animation: glassRevealFlash 0.7s ease forwards;
}