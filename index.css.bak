/* Pompous Bento Design System */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap');

:root {
  --bg-primary: #050505;
  --bg-secondary: #0d0d0d;
  --bg-glass: rgba(18, 18, 18, 0.6);
  --border-glass: rgba(255, 255, 255, 0.08);
  --accent: #2997ff;
  --accent-soft: rgba(41, 151, 255, 0.15);
  --text-primary: #f5f5f7;
  --text-secondary: #86868b;
  --radius-l: 24px;
  --radius-m: 16px;
  --transition: all 0.4s cubic-bezier(0.2, 0.8, 0.2, 1);
  --mouse-x: 50%;
  --mouse-y: 50%;
  --glow-opacity: 0;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
  scroll-padding-top: 72px;
}

.monospace {
  font-family: 'Inter', -apple-system, sans-serif;
  font-size: 0.9rem;
  letter-spacing: 0.02em;
  font-weight: 500;
}

footer {
  margin-top: 80px;
  padding: 40px 0;
  border-top: 1px solid rgba(255, 255, 255, 0.05);
}

.footer-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: var(--text-secondary);
  font-size: 0.9rem;
}

body {
  background-color: #000000;
  color: var(--text-primary);
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
  font-weight: 300;
  line-height: 1.6;
  padding: 100px 40px 80px;
  overflow-x: hidden;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  min-height: 100vh;
  position: relative;
}

/* 3D Canvas - strictly isolated on pure black */
#bg-canvas {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: -1;
  opacity: 1;
}

/* Cleaned up HUD references */

/* Typography */
h1 {
  font-size: 4rem;
  font-weight: 500;
  letter-spacing: -0.04em;
  line-height: 1;
  margin-bottom: 24px;
  color: #ffffff;
}

h2 {
  font-size: 2.2rem;
  font-weight: 500;
  letter-spacing: -0.03em;
  margin-bottom: 30px;
  color: var(--text-primary);
  display: inline-block;
  position: relative;
}

h3 {
  font-size: 1.4rem;
  font-weight: 500;
  letter-spacing: -0.02em;
  margin-bottom: 8px;
}

p {
  line-height: 1.6;
  color: var(--text-secondary);
  font-size: 1.1rem;
  font-weight: 300;
  letter-spacing: -0.01em;
}

a {
  color: inherit;
  text-decoration: none;
}



/* Layout - The Main Grid */
.bento-container {
  max-width: 1300px;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  gap: 80px;
}

/* Hero Section */
.hero-block {
  display: grid;
  grid-template-columns: 1.2fr 0.8fr;
  gap: 40px;
  align-items: center;
}

.bio-card {
  padding-right: 20px;
  animation: slideUpFade 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
}

@keyframes slideUpFade {
  from {
    opacity: 0;
    transform: translateY(30px);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.reveal {
  opacity: 0;
  transform: translateY(30px);
  transition: opacity 0.8s cubic-bezier(0.2, 0.8, 0.2, 1), transform 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
}

.reveal.active {
  opacity: 1;
  transform: translateY(0);
}

.bio-card a {
  color: var(--text-primary);
  text-decoration: underline;
  text-decoration-color: rgba(255, 255, 255, 0.2);
  text-underline-offset: 4px;
  transition: all 0.2s;
}

.bio-card a:hover {
  text-decoration-color: var(--accent);
  color: var(--accent);
}

.bio-narrative {
  font-size: 1.4rem;
  line-height: 1.5;
  margin-bottom: 24px;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 300;
}

.bio-narrative strong {
  font-weight: 500;
  color: #fff;
}

.bio-details {
  font-size: 1.15rem;
  color: var(--text-secondary);
  margin-bottom: 32px;
  line-height: 1.6;
  font-weight: 300;
}

.service-list li {
  display: flex;
  flex-direction: column;
  gap: 8px;
  padding-bottom: 20px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.service-list li:last-child {
  border-bottom: none;
}

.service-list strong {
  color: var(--text-primary);
  font-size: 1.1rem;
  font-weight: 600;
}

.service-list span {
  color: var(--accent);
  font-size: 0.9rem;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.service-list small {
  color: var(--text-secondary);
  font-size: 0.95rem;
}

.card-icon {
  font-size: 1.5rem;
  color: var(--accent);
  margin-bottom: 16px;
  opacity: 0.8;
  filter: drop-shadow(0 0 10px var(--accent-soft));
  transition: transform 0.4s ease;
}

.bento-card:hover .card-icon {
  transform: scale(1.2) rotate(5deg);
  opacity: 1;
}

.service-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin-top: 10px;
}

.service-tags span {
  font-family: 'JetBrains Mono', monospace;
  font-size: 0.75rem;
  padding: 6px 14px;
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 100px;
  color: var(--text-secondary);
  text-transform: none;
  letter-spacing: 0;
  transition: var(--transition);
}

/* Removed redundant affiliation-row */

.service-tags span:hover {
  background: var(--accent-soft);
  color: var(--accent);
  border-color: var(--accent);
  transform: translateY(-2px);
}

.bio-contact {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-bottom: 32px;
}

.contact-item {
  font-family: 'Inter', -apple-system, sans-serif;
  font-weight: 400;
  font-size: 1rem;
  color: var(--text-secondary);
  display: flex;
  align-items: center;
  gap: 12px;
}

.contact-item i {
  color: var(--accent);
  width: 16px;
}

.at-symbol {
  color: var(--accent);
  opacity: 0.7;
}

.highlight-link {
  color: var(--accent) !important;
  text-decoration: none !important;
  border-bottom: 1px solid rgba(41, 151, 255, 0.3);
}

.highlight-link:hover {
  background: rgba(41, 151, 255, 0.1);
  border-bottom-color: var(--accent);
}

.profile-container {
  display: flex;
  flex-direction: column;
  gap: 12px;
  align-items: center;
  perspective: 1400px;
}

.profile-3d-wrap {
  width: 100%;
  border-radius: var(--radius-l);
  position: relative;
  transform-style: preserve-3d;
  will-change: transform;
  transition: transform 0.45s cubic-bezier(0.2, 0.8, 0.2, 1), box-shadow 0.45s ease;
  box-shadow:
    0 40px 80px -20px rgba(0, 0, 0, 0.8),
    0 0 40px rgba(41, 151, 255, 0.1);
}

.profile-3d-wrap::before {
  content: "";
  position: absolute;
  inset: -120% -35%;
  background: linear-gradient(110deg,
      transparent 42%,
      rgba(255, 255, 255, 0.6) 50%,
      transparent 58%);
  transform: translateX(-70%) rotate(9deg);
  opacity: 0;
  transition: transform 0.85s ease, opacity 0.35s ease;
  pointer-events: none;
  z-index: 3;
}

.profile-3d-wrap::after {
  content: "";
  position: absolute;
  inset: -8px;
  border-radius: calc(var(--radius-l) + 8px);
  background: radial-gradient(circle at var(--mouse-local-x, 50%) var(--mouse-local-y, 50%), rgba(41, 151, 255, 0.35), transparent 45%);
  opacity: 0;
  transition: opacity 0.35s ease;
  pointer-events: none;
  z-index: 1;
}

.profile-img {
  width: 100%;
  height: 400px;
  object-fit: cover;
  border-radius: var(--radius-l);
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: none;
  animation: imageEnter 1.2s cubic-bezier(0.2, 0.8, 0.2, 1);
  transform: translateZ(18px);
}

.profile-3d-wrap:hover {
  box-shadow:
    0 55px 90px -20px rgba(0, 0, 0, 0.88),
    0 0 60px rgba(41, 151, 255, 0.22);
}

.profile-3d-wrap:hover::before {
  transform: translateX(70%) rotate(9deg);
  opacity: 1;
}

.profile-3d-wrap:hover::after {
  opacity: 1;
}

.refresh-hint {
  font-family: 'Inter', -apple-system, sans-serif;
  font-size: 0.8rem;
  letter-spacing: 0.05em;
  color: var(--text-secondary);
  opacity: 0.6;
  margin: 0;
  font-weight: 300;
}

@keyframes imageEnter {
  from {
    opacity: 0;
    transform: scale(0.95) translateX(20px);
  }

  to {
    opacity: 1;
    transform: scale(1) translateX(0);
  }
}

.card-links {
  display: flex;
  gap: 16px;
  margin-top: 16px;
}

.card-authors {
  font-size: 0.8rem;
  color: var(--text-secondary);
  opacity: 0.7;
  margin-bottom: 8px;
  line-height: 1.3;
  display: -webkit-box !important;
  -webkit-line-clamp: 4 !important;
  line-clamp: 4 !important;
  -webkit-box-orient: vertical !important;
  overflow: hidden;
  max-height: 5.2em;
  /* Backup for browsers that don't support line-clamp well */
}

.card-authors span.me {
  color: var(--text-primary);
  font-weight: 600;
  text-decoration: underline;
  text-decoration-color: var(--accent);
  text-underline-offset: 3px;
}

.social-grid {
  display: flex;
  gap: 16px;
  margin-top: 10px;
  flex-wrap: wrap;
}

.social-btn {
  /* True Liquid Glass Look */
  background: rgba(255, 255, 255, 0.03);
  backdrop-filter: blur(80px) saturate(200%);
  -webkit-backdrop-filter: blur(80px) saturate(200%);
  color: var(--text-primary);
  padding: 14px 24px;
  border-radius: 50px;
  font-weight: 500;
  font-size: 1.05rem;
  transition: all 0.4s cubic-bezier(0.25, 1, 0.5, 1);
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow:
    inset 1px 1px 0px rgba(255, 255, 255, 0.15),
    inset -1px -1px 0px rgba(255, 255, 255, 0.05),
    0 10px 20px rgba(0, 0, 0, 0.2);
  display: inline-flex;
  align-items: center;
  gap: 10px;
  background-size: 300% 300%;
}

.social-btn:hover {
  /* Bright Liquid Glass Glow + Subtle Flag Integration */
  background: linear-gradient(135deg, rgba(255, 153, 51, 0.4) 0%, rgba(255, 255, 255, 0.7) 33%, rgba(19, 136, 8, 0.4) 66%, rgba(0, 0, 128, 0.4) 100%);
  background-color: rgba(255, 255, 255, 0.1);
  background-size: 400% 400%;
  animation: flagShift 4s ease infinite;
  color: #fff;
  transform: translateY(-4px) scale(1.02);
  box-shadow:
    0 15px 30px rgba(0, 0, 0, 0.4),
    0 0 25px rgba(255, 255, 255, 0.2),
    inset 1px 1px 0px rgba(255, 255, 255, 0.8),
    inset -1px -1px 0px rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.6);
}

@keyframes flagShift {
  0% {
    background-position: 0% 50%;
  }

  50% {
    background-position: 100% 50%;
  }

  100% {
    background-position: 0% 50%;
  }
}

/* Bento Grid for Projects */
.project-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
  gap: 32px;
  align-items: flex-start;
  /* Important: prevents cards from stretching to the same height */
}

.bento-card {
  /* True Liquid Glass Look - Increased Blur */
  background: rgba(255, 255, 255, 0.03);
  backdrop-filter: blur(80px) saturate(200%);
  -webkit-backdrop-filter: blur(80px) saturate(200%);
  border-radius: var(--radius-l);
  overflow: hidden;
  border: 1px solid rgba(255, 255, 255, 0.1);
  transition: var(--transition);
  display: flex;
  flex-direction: column;
  box-shadow:
    inset 1px 1px 0px rgba(255, 255, 255, 0.15),
    inset -1px -1px 0px rgba(255, 255, 255, 0.05),
    0 20px 40px rgba(0, 0, 0, 0.3);
  text-decoration: none;
  cursor: pointer;
  position: relative;
}

.bento-card::before {
  content: "";
  position: absolute;
  inset: -1px;
  border-radius: inherit;
  padding: 1px;
  /* Subtle Indian Flag Edge Glow on hover */
  background: conic-gradient(from var(--beam-angle, 0deg),
      transparent 70%,
      rgba(255, 153, 51, 0.4) 80%,
      rgba(255, 255, 255, 0.4) 85%,
      rgba(19, 136, 8, 0.4) 90%,
      rgba(0, 0, 128, 0.4) 100%);
  -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
  mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
  -webkit-mask-composite: xor;
  mask-composite: exclude;
  opacity: 0;
  transition: opacity 0.5s ease;
  pointer-events: none;
  z-index: 10;
}

.bento-card:hover::before {
  opacity: 1;
  animation: beam-spin 3s linear infinite;
}

@keyframes beam-spin {
  from {
    --beam-angle: 0deg;
  }

  to {
    --beam-angle: 360deg;
  }
}

/* Mouse Glow relocated to a child or combined */
.bento-card {
  --beam-angle: 0deg;
  /* Ensure variable exists */
}

.bento-card::after {
  content: "";
}

.bento-card:hover {
  background-color: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.3);
  box-shadow:
    inset 1px 1px 0px rgba(255, 255, 255, 0.6),
    inset -1px -1px 0px rgba(255, 255, 255, 0.05),
    0 30px 60px -12px rgba(0, 0, 0, 0.8),
    0 0 50px rgba(255, 255, 255, 0.15);
}

.card-media-wrapper {
  position: relative;
  width: 100%;
  aspect-ratio: 16/9;
  overflow: hidden;
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.card-media {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.6s cubic-bezier(0.25, 1, 0.5, 1);
}

.bento-card:hover .card-media {
  transform: scale(1.05);
}

.card-content {
  padding: 24px;
  display: flex;
  flex-direction: column;
}

/* Engineering Metadata (Monospace) */
.badge,
.card-links,
footer,
.impact-text {
  font-family: 'Inter', -apple-system, sans-serif;
  letter-spacing: -0.01em;
  font-weight: 400;
}

.badge-container {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin-bottom: 16px;
}

.badge {
  font-size: 0.7rem;
  text-transform: uppercase;
  font-weight: 600;
  padding: 4px 10px;
  border-radius: 2px;
  background: rgba(255, 255, 255, 0.05);
  color: var(--text-secondary);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.badge.venue {
  color: var(--accent);
  background: rgba(41, 151, 255, 0.1);
  border: 1px solid rgba(41, 151, 255, 0.2);
}

.badge.award {
  background: rgba(251, 191, 36, 0.1);
  color: var(--accent-gold);
  border: 1px solid rgba(251, 191, 36, 0.2);
}

.card-links {
  margin-top: auto;
  padding-top: 24px;
  display: flex;
  gap: 20px;
  font-size: 0.95rem;
}

.link-mute {
  color: var(--text-secondary);
  transition: color 0.2s;
  font-weight: 500;
}

.link-mute:hover {
  color: var(--text-primary);
  text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
}

/* Impact "Ticker" Grid - Dense & Pompous */
.impact-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
  gap: 20px;
}

.impact-card {
  /* True Liquid Glass Look */
  background: rgba(255, 255, 255, 0.03);
  backdrop-filter: blur(80px) saturate(200%);
  -webkit-backdrop-filter: blur(80px) saturate(200%);
  padding: 24px;
  border-radius: var(--radius-m);
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  border: 1px solid rgba(255, 255, 255, 0.05);
  box-shadow:
    inset 1px 1px 0px rgba(255, 255, 255, 0.1),
    0 10px 20px rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
  height: 100%;
}

.impact-card:hover {
  background-color: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.3);
  box-shadow:
    inset 1px 1px 0px rgba(255, 255, 255, 0.4),
    0 20px 40px rgba(0, 0, 0, 0.2),
    0 0 30px rgba(255, 255, 255, 0.1);
}

.impact-logo {
  height: 48px;
  /* Slightly taller to accommodate padding */
  width: auto;
  max-width: 100%;
  margin-bottom: 16px;
  /* Fix: Remove invert filter, add white backing */
  filter: none;
  background: white;
  padding: 6px;
  border-radius: 4px;
  object-fit: contain;
  transition: opacity 0.3s;
}

.impact-card:hover .impact-logo {
  opacity: 1;
}

.impact-text {
  font-size: 0.85rem;
  color: var(--text-secondary);
  line-height: 1.4;
}

/* Experience Section */
.experience-grid {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.exp-card {
  /* True Liquid Glass Look */
  background: rgba(255, 255, 255, 0.03);
  backdrop-filter: blur(80px) saturate(200%);
  -webkit-backdrop-filter: blur(80px) saturate(200%);
  padding: 30px;
  border-radius: var(--radius-m);
  border: 1px solid rgba(255, 255, 255, 0.05);
  box-shadow:
    inset 1px 1px 0px rgba(255, 255, 255, 0.1),
    0 15px 30px rgba(0, 0, 0, 0.2);
  transition: all 0.3s cubic-bezier(0.2, 0.8, 0.2, 1);
}

.exp-card:hover {
  background-color: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.3);
  box-shadow:
    inset 1px 1px 0px rgba(255, 255, 255, 0.5),
    0 25px 50px rgba(0, 0, 0, 0.3),
    0 0 40px rgba(255, 255, 255, 0.1);
}

.exp-header {
  display: flex;
  align-items: center;
  gap: 20px;
  margin-bottom: 20px;
}

.exp-logo {
  height: 50px;
  width: auto;
  max-width: 120px;
  object-fit: contain;
  background: white;
  padding: 8px;
  border-radius: 8px;
}

.exp-meta h3 {
  margin-bottom: 4px;
  color: #fff;
  font-weight: 500;
}

.exp-meta p {
  font-family: 'Inter', -apple-system, sans-serif;
  font-size: 0.95rem;
  color: var(--text-secondary);
  font-weight: 400;
}

/* Teaching & Service */
.dual-column {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 40px;
}

.service-list {
  list-style: none;
  padding: 0;
}

.service-list li {
  /* True Liquid Glass Look */
  background: rgba(255, 255, 255, 0.03);
  backdrop-filter: blur(80px) saturate(200%);
  -webkit-backdrop-filter: blur(80px) saturate(200%);
  padding: 24px;
  border-radius: var(--radius-m);
  border: 1px solid rgba(255, 255, 255, 0.05);
  box-shadow:
    inset 1px 1px 0px rgba(255, 255, 255, 0.1),
    0 10px 20px rgba(0, 0, 0, 0.1);
  margin-bottom: 16px;
}

.service-list li strong {
  display: block;
  font-size: 1.1rem;
  margin-bottom: 4px;
}

.service-list li span {
  display: block;
  font-family: 'JetBrains Mono', monospace;
  font-size: 0.85rem;
  color: var(--accent);
  margin-bottom: 12px;
}

.service-list li small {
  display: block;
  color: var(--text-secondary);
  font-size: 0.9rem;
  margin-top: 4px;
}

/* Impact Logo Text fallback */
.impact-logo-text {
  font-family: 'Inter', sans-serif;
  font-size: 1.2rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 48px;
  width: 100%;
}

/* Affiliations */
.affiliation-row {
  display: grid;
  grid-template-columns: repeat(5, minmax(0, 1fr));
  gap: clamp(14px, 2vw, 26px);
  padding: clamp(20px, 2vw, 36px);
  /* Fix: Remove solid white block, go back to transparent/subtle */
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.02) 0%, transparent 100%);
  border-radius: var(--radius-l);
  align-items: center;
  border: 1px solid rgba(255, 255, 255, 0.05);
  perspective: 1000px;
}

.affil-tile {
  width: 100%;
  min-height: clamp(82px, 7vw, 104px);
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(165deg, rgba(255, 255, 255, 0.96), rgba(255, 255, 255, 0.88));
  border: 1px solid rgba(255, 255, 255, 0.35);
  box-shadow:
    0 16px 34px rgba(0, 0, 0, 0.35),
    inset 0 1px 0 rgba(255, 255, 255, 0.9);
  transform-style: preserve-3d;
  will-change: transform;
  transition: transform 0.45s cubic-bezier(0.2, 0.8, 0.2, 1), box-shadow 0.45s ease;
  position: relative;
  overflow: hidden;
}

.affil-tile::before {
  content: "";
  position: absolute;
  inset: -130% -30%;
  background: linear-gradient(110deg,
      transparent 42%,
      rgba(255, 255, 255, 0.72) 50%,
      transparent 58%);
  transform: translateX(-65%) rotate(8deg);
  opacity: 0;
  transition: transform 0.85s ease, opacity 0.4s ease;
}

.affil-tile:hover {
  transform: translateY(-6px) scale(1.03);
  box-shadow:
    0 24px 45px rgba(0, 0, 0, 0.45),
    0 0 40px rgba(41, 151, 255, 0.16),
    inset 0 1px 0 rgba(255, 255, 255, 1);
}

.affil-tile:hover::before {
  transform: translateX(65%) rotate(8deg);
  opacity: 1;
}

.affil-logo {
  width: 78% !important;
  height: 62% !important;
  max-width: none !important;
  object-fit: contain;
  object-position: center;
  display: block;
  filter: none;
  opacity: 1;
  transition: transform 0.45s cubic-bezier(0.175, 0.885, 0.32, 1.275), filter 0.35s ease;
  background: transparent;
  padding: 0 !important;
  border-radius: 0;
  flex-shrink: 0;
}

.affil-tile:hover .affil-logo {
  transform: scale(1.08);
  filter: saturate(1.1) contrast(1.05);
}

[data-id="AFFIL-SYS"] {
  overflow: visible;
}

[data-id="AFFIL-SYS"]::after {
  content: "";
  position: absolute;
  inset: -2px;
  border-radius: inherit;
  pointer-events: none;
  background: radial-gradient(circle at var(--mouse-local-x, 50%) var(--mouse-local-y, 50%), rgba(41, 151, 255, 0.22), transparent 45%);
  opacity: 0;
  transition: opacity 0.35s ease;
}

[data-id="AFFIL-SYS"]:hover::after {
  opacity: 1;
}

/* Footer */
footer {
  text-align: center;
  padding-top: 80px;
  color: var(--text-secondary);
  font-size: 0.9rem;
  opacity: 0.6;
}

/* Responsive */
@media (max-width: 900px) {
  .project-grid {
    grid-template-columns: 100%;
    /* Force full width stacking */
  }

  .hero-block {
    grid-template-columns: 1fr;
    gap: 30px;
  }

  .profile-img {
    height: 300px;
    /* Slightly smaller on mobile */
    order: -1;
  }

  h1 {
    font-size: 2.2rem;
    /* Reduce header size */
  }

  h2 {
    font-size: 1.6rem;
  }

  h3 {
    font-size: 1.25rem;
  }

  p {
    font-size: 0.95rem;
    /* Tighter body text */
  }

  body {
    padding: 30px 15px;
    /* Tighter page padding */
  }

  .bento-container {
    gap: 40px;
  }

  /* Tighter card internals for mobile */
  .card-content {
    padding: 20px;
  }

  .badge {
    font-size: 0.65rem;
    padding: 4px 10px;
  }

  /* Adjust Affiliations for mobile */
  .affiliation-row {
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 20px;
    padding: 24px;
  }

  .affil-tile {
    min-height: clamp(78px, 20vw, 102px);
    border-radius: 14px;
  }

